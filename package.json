{
  "name": "@qiwi/decorator-utils",
  "version": "1.0.0",
  "description": "Tiny helper for js decorator building",
  "main": "dist/index.js",
  "scripts": {
    "lint": "standard-flow src/**/*.js test/**/*.js",
    "flow": "flow",
    "test": "yarn lint && yarn flow && yarn mocha",
    "flow_coverage": "flow-coverage-report -i 'src/**/*.js' -t html -t json -t text --threshold 90",
    "build": "rm -rf dist && babel src --out-dir dist",
    "mocha": "nyc mocha --require @babel/register --reporter spec test && nyc report --reporter=text-lcov > ./coverage/lcov.info",
    "test_with_report": "npm test && yarn coveralls_push",
    "coveralls_push": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qiwi/decorator-utils.git"
  },
  "keywords": [
    "decorator",
    "@decorator",
    "annotation"
  ],
  "files": [
    "README.md",
    "CHANGELOG.md",
    "dist"
  ],
  "author": "Anton Golub <a.golub@qiwi.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.1",
    "@babel/plugin-transform-flow-strip-types": "^7.2.3",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.3.1",
    "@istanbuljs/nyc-config-babel": "^2.0.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "babel-plugin-istanbul": "^5.1.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "flow-bin": "^0.92.0",
    "flow-coverage-report": "^0.6.1",
    "flow-remove-types": "^1.2.3",
    "glob": "^7.1.3",
    "mocha": "^6.0.0",
    "nyc": "10.0.0",
    "semantic-release": "^15.13.3",
    "standard-flow": "^1.0.0"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "standard-flow": {
    "parser": "babel-eslint",
    "globals": [
      "it",
      "expect",
      "describe",
      "PropertyDescriptor"
    ],
    "ignore": [],
    "plugins": [
      "flowtype"
    ],
    "settings": {
      "flowtype": {
        "onlyFilesWithFlowAnnotation": true
      }
    }
  },
  "dependencies": {}
}
