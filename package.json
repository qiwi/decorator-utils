{
  "name": "@qiwi/decorator-utils",
  "version": "1.0.0",
  "description": "Tiny helper for js decorator building",
  "main": "dist/index.js",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "build": "rimraf dist && tsc -p tsconfig.json --skipLibCheck",
    "test": "yarn build && yarn jest",
    "test:report": "yarn build && yarn jest --collect-coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qiwi/decorator-utils.git"
  },
  "keywords": [
    "decorator",
    "@decorator",
    "annotation"
  ],
  "files": [
    "README.md",
    "CHANGELOG.md",
    "dist"
  ],
  "author": "Anton Golub <a.golub@qiwi.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.4.2",
    "@semantic-release/npm": "^5.1.13",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.8",
    "babel-jest": "^24.8.0",
    "cross-env": "^5.2.0",
    "glob": "^7.1.4",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.18",
    "ts-jest": "^24.0.2",
    "tslint": "5.18.0",
    "tslint-config-qiwi": "^1.1.0",
    "typescript": "3.5.3"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".spec.(t|j)s$",
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
